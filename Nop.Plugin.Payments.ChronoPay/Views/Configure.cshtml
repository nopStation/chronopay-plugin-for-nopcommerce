@{
    Layout = "_ConfigurePlugin";
}

@model ConfigurationModel
@using Nop.Plugin.Payments.ChronoPay.Models

<form asp-controller="PaymentChronoPay" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <p>
                    <b>Please ensure that nopCommerce primary currency matches ChronoPay currency.</b>
                </p>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="GatewayUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="GatewayUrl" />
                        <span asp-validation-for="GatewayUrl"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ProductId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ProductId" />
                        <span asp-validation-for="ProductId"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ProductName" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ProductName" />
                        <span asp-validation-for="ProductName"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="SharedSecrect" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="SharedSecrect" />
                        <span asp-validation-for="SharedSecrect"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="AdditionalFee" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFee" />
                        <span asp-validation-for="AdditionalFee"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
